<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.fingercash.app.fingercash.LoginPage">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="FingerCash"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="70dp"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/ImageV4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Better Security! More Efficiency!"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="120dp"
        android:layout_below="@+id/ImageV4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ImageV4"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:src="@drawable/fp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="46dp"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2017 FingerCash"
        android:textColor="#ffff"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="478dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="210dp"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="281dp"
        android:layout_above="@+id/btnLogin2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />

    <Button
        android:id="@+id/btnLogin2"
        android:layout_width="199dp"
        android:layout_height="30dp"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true"
        android:background="#FFFF"
        android:onClick="btnLogin2OnClick"
        android:text="LOGIN"
        android:textColor="#FF0033"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="344dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="#0000"
        android:onClick="button4OnClick"
        android:text="Cancel"
        android:textColor="#FF0033"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="375dp" />

</android.widget.RelativeLayout>
