<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.fingercash.app.fingercash.LoginPage">

    <ImageView
        android:id="@+id/ImageView3"
        android:layout_width="270dp"
        android:layout_height="365dp"
        android:alpha=".75"
        android:src="@drawable/fp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="73dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textV4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Register"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="33dp"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/butt"
        android:layout_marginStart="41dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="username"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="128dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textV4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="181dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText5"
        android:layout_below="@+id/editText5"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="ID number"
        android:inputType="textPersonName"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="234dp" />

    <Button
        android:id="@+id/but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textV4"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="14dp"
        android:background="#0000"
        android:onClick="butOnClick"
        android:text="Cancel"
        android:textColor="#ff0033"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/butt"
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_above="@+id/but"
        android:layout_centerHorizontal="true"
        android:background="#FFFF"
        android:text="submit"
        android:textColor="#FF0033"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="398dp" />

</android.widget.RelativeLayout>