<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.fingercash.app.fingercash.LoginPage">

    <ImageView
        android:id="@+id/ImageView2"
        android:layout_width="270dp"
        android:layout_height="365dp"
        android:alpha=".75"
        android:src="@drawable/fp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="73dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textV3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Register"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="53dp"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button2"
        android:layout_marginStart="42dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="email@example.com"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="174dp"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/editText7"
        android:layout_alignEnd="@+id/editText7" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/ImageView2"
        android:layout_marginBottom="89dp"
        android:ems="10"
        android:hint="phone number"
        android:inputType="textPersonName"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="252dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:background="#FFFF"
        android:onClick="button2OnClick"
        android:text="next"
        android:textColor="#FF0033"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="389dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="#0000"
        android:onClick="button3OnClick"
        android:text="Cancel"
        android:textColor="#ff0033"
        android:textSize="17dp"
        android:textStyle="bold" />

</android.widget.RelativeLayout>